<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
	<Frame name="GNOMTEC_NPCEMOTE_FRAME" parent="UIParent" toplevel="true" movable="true" resizable="true" clampedToScreen="true" hidden="true">
		<Size x="400" y="200" />
		<ResizeBounds>
            <minResize>
                <AbsDimension x="150" y="150"/>
            </minResize>
        </ResizeBounds>
		<Anchors>
			<Anchor point="CENTER" relativePoint="CENTER"/>
		</Anchors>
		<Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
			<EdgeSize val="16"/>
			<TileSize val="16"/>
			<Color r="0.25" g="0.25" b="0.25"/>
			<BackgroundInsets left="5" right="5" top="5" bottom="5"/>
		</Backdrop>
		<Frames>
			<Button name="$parent_CloseButton" inherits="UIPanelCloseButton">
				<Anchors>
					<Anchor point="TOPRIGHT" relativePoint="TOPRIGHT">
						<Offset>
							<AbsDimension x="-1" y="-1"/>
						</Offset>
					</Anchor>
				</Anchors>
			</Button>
			<Button name="$parent_TARGET_BUTTON" inherits="GameMenuButtonTemplate"  resizable="true" setAllPoints="true" text="Target:">
				<Size x="60" y="20" />
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="10" y="-10"/>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						GNOMTEC_NPCEMOTE_FRAME_SCROLL_TEXT:ClearFocus();
						GNOMTEC_NPCEMOTE_FRAME_NPC:ClearFocus();
						GnomTEC_NPCEmote:GetTargetNPC();
					</OnClick>
				</Scripts>
			</Button>
			<EditBox name="$parent_NPC" resizable="true" setAllPoints="true" multiline="false" autofocus="false">
				<FontString inherits="GameFontWhite"/>
				<Size x="400" y="18" />
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeTo="$parent_TARGET_BUTTON">
						<Offset>
							<AbsDimension x="0" y="0"/>
						</Offset>
					</Anchor>
					<Anchor point="RIGHT" relativeTo="$parent_CloseButton" relativePoint="LEFT">
						<Offset>
							<AbsDimension x="0" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" tile="true">
					<TileSize val="16"/>
					<Color r="0.25" g="0.25" b="0.25"/>
					<BackgroundInsets left="0" right="0" top="0" bottom="0"/>
				</Backdrop>
				<Scripts>
					<OnLoad>
						self:EnableKeyboard(true);
						self:EnableMouse(true);	
					</OnLoad>
					<OnEscapePressed>
						self:ClearFocus();
					</OnEscapePressed>
					<OnEnterPressed>
						GNOMTEC_NPCEMOTE_FRAME_SCROLL_TEXT:SetFocus();
					</OnEnterPressed>
					<OnTabPressed>
						GNOMTEC_NPCEMOTE_FRAME_SCROLL_TEXT:SetFocus();
					</OnTabPressed>
				</Scripts>
			</EditBox>
			<Button name="$parent_SELECTEMOTE_BUTTON" inherits="GameMenuButtonTemplate" text="">
				<Size x="140" y="20" />
				<Anchors>
					<Anchor point="TOP" relativePoint="BOTTOM" relativeTo="$parent_NPC">
						<Offset x="0" y="-5" />
					</Anchor>
					<Anchor point="LEFT">
						<Offset x="10" y="0" />
					</Anchor>
					<Anchor point="RIGHT">
						<Offset x="-10" y="0" />
					</Anchor>

				</Anchors>
				<Scripts>
					<OnClick>
						GNOMTEC_NPCEMOTE_FRAME_SCROLL_TEXT:ClearFocus();
						GNOMTEC_NPCEMOTE_FRAME_NPC:ClearFocus();
						GnomTEC_NPCEmote:SelectEmote_Button_OnClick(self, button, down)
					</OnClick>
				</Scripts>
			</Button>
			<Frame name="$parent_SELECTEMOTE_DROPDOWN" inherits="UIDropDownMenuTemplate" id="1">
				<Scripts>
					<OnLoad>
						GnomTEC_NPCEmote:SelectEmote_DropDown_OnLoad(self)
					</OnLoad>
				</Scripts>
			</Frame>
			<Button name="$parent_SEND_BUTTON" inherits="GameMenuButtonTemplate"  resizable="true" setAllPoints="true" text="Send NPCEmote">
				<Size x="400" y="20" />
				<Anchors>
					<Anchor point="BOTTOMLEFT">
						<Offset x="10" y="10" />
					</Anchor>
					<Anchor point="RIGHT">
						<Offset x="-10" y="0" />
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						GNOMTEC_NPCEMOTE_FRAME_SCROLL_TEXT:ClearFocus();
						GNOMTEC_NPCEMOTE_FRAME_NPC:ClearFocus();
						GnomTEC_NPCEmote:SendEmote();
					</OnClick>
				</Scripts>
			</Button>
			<ScrollFrame name="$parent_SCROLL" resizable="true" setAllPoints="true">
				<Anchors>
					<Anchor point="TOP" relativePoint="BOTTOM" relativeTo="$parent_SELECTEMOTE_BUTTON">
						<Offset x="0" y="-5" />
					</Anchor>
					<Anchor point="BOTTOM" relativePoint="TOP" relativeTo="$parent_SEND_BUTTON">
						<Offset x="0" y="5" />
					</Anchor>
					<Anchor point="LEFT">
						<Offset x="10" y="0" />
					</Anchor>
					<Anchor point="RIGHT">
						<Offset x="-10" y="0" />
					</Anchor>
				</Anchors>
				<Frames>
					<Slider name="$parent_SLIDER" resizable="true" setAllPoints="true">
						<Anchors>
							<Anchor point="TOPRIGHT">
								<Offset x="0" y="-16" />
							</Anchor>
							<Anchor point="BOTTOMRIGHT">
								<Offset x="0" y="16" />
							</Anchor>
						</Anchors>	
						<Size>
							<AbsDimension x="16" y="43"/>
						</Size>
						<Frames>
							<Button name="$parentScrollUpButton" inherits="UIPanelScrollUpButtonTemplate">
								<Anchors>
									<Anchor point="BOTTOM" relativePoint="TOP"/>
								</Anchors>
								<Scripts>
									<OnClick>
										local parent = self:GetParent();
										parent:SetValue(parent:GetValue() - (parent:GetHeight() / 2));
										PlaySound("UChatScrollButton");
									</OnClick>
									<OnEnter>
										local parent = self:GetParent();
										parentOfParent = parent:GetParent();
										parentOfParent:UpdateScrollChildRect();
										parent:SetMinMaxValues(0, parentOfParent:GetVerticalScrollRange());
										parent:SetValue(parentOfParent:GetVerticalScroll());   
									</OnEnter>
								</Scripts>
							</Button>
							<Button name="$parentScrollDownButton" inherits="UIPanelScrollDownButtonTemplate">
								<Anchors>
									<Anchor point="TOP" relativePoint="BOTTOM"/>
								</Anchors>	
								<Scripts>
									<OnClick>
										local parent = self:GetParent();
										parent:SetValue(parent:GetValue() + (parent:GetHeight() / 2));
										PlaySound("UChatScrollButton");
									</OnClick>
									<OnEnter>
										local parent = self:GetParent();
										parentOfParent = parent:GetParent();
										parentOfParent:UpdateScrollChildRect();
										parent:SetMinMaxValues(0, parentOfParent:GetVerticalScrollRange());
										parent:SetValue(parentOfParent:GetVerticalScroll());   
									</OnEnter>
								</Scripts>
							</Button>
						</Frames>
						<Scripts>
							<OnValueChanged>
								self:GetParent():SetVerticalScroll(value);
							</OnValueChanged>
							<OnEnter>
								local parent = self:GetParent();
								parent:UpdateScrollChildRect();
								self:SetMinMaxValues(0, parent:GetVerticalScrollRange());
								self:SetValue(parent:GetVerticalScroll());   
							</OnEnter>
						</Scripts>
						<ThumbTexture name="$parentThumbTexture" inherits="UIPanelScrollBarButton" file="Interface\Buttons\UI-ScrollBar-Knob">
							<Size>
								<AbsDimension x="16" y="16"/>
							</Size>
						</ThumbTexture>
					</Slider>
				</Frames>
				<ScrollChild>
					<EditBox name="$parent_TEXT" parentKey="child" resizable="true" setAllPoints="true" multiline="true" autofocus="false">
						<FontString inherits="GameFontWhite"/>
						<Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" tile="true">
							<TileSize val="16"/>
							<Color r="0.25" g="0.25" b="0.25"/>
							<BackgroundInsets left="0" right="0" top="0" bottom="0"/>
						</Backdrop>
						<Scripts>
							<OnLoad>
								self:EnableKeyboard(true);
								self:EnableMouse(true);	
							</OnLoad>
							<OnSizeChanged>
								local parent = self:GetParent();
								parent:UpdateScrollChildRect();
							</OnSizeChanged>
							<OnEscapePressed>
								self:ClearFocus();
							</OnEscapePressed>
							<OnTabPressed>
								GNOMTEC_NPCEMOTE_FRAME_NPC:SetFocus();
							</OnTabPressed>
						</Scripts>
					</EditBox>
				</ScrollChild>
				<Scripts>
					<OnSizeChanged>
						local child = self.child;
						child:SetWidth(self:GetWidth()-16);	
						child:SetHeight(self:GetHeight());	
						child:SetTextInsets(0, 0, 0, 0);
						child:SetPoint("BOTTOM");
						self:UpdateScrollChildRect();
					</OnSizeChanged>
				</Scripts>
			</ScrollFrame>
			<Button name="$parent_RESIZE">
				<Size x="16" y="16"/>
				<Anchors>
					<Anchor point="BOTTOMRIGHT">
						<Offset>
							<AbsDimension x="0" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnMouseDown>
						self:GetParent():StartSizing();
					</OnMouseDown>
					<OnMouseUp>
						self:GetParent():StopMovingOrSizing();
					</OnMouseUp>
				</Scripts>
				<NormalTexture file="Interface\ChatFrame\UI-ChatIM-SizeGrabber-Up"/>
				<HighlightTexture file="Interface\ChatFrame\UI-ChatIM-SizeGrabber-Highlight"/>
				<PushedTexture file="Interface\ChatFrame\UI-ChatIM-SizeGrabber-Down"/>
			</Button>
		</Frames>			
		<Scripts>
			<OnMouseDown>
					self:StartMoving();
			</OnMouseDown>
			<OnMouseUp>self:StopMovingOrSizing();</OnMouseUp>
		</Scripts>
	</Frame>
	
	<Frame name="GNOMTEC_NPCEMOTE_TOOLBAR" parent="UIParent" toplevel="true" movable="true" resizable="false" clampedToScreen="true" hidden="true">
		<Size x="26" y="26" />
		<Anchors>
			<Anchor point="CENTER" relativePoint="CENTER"/>
		</Anchors>
		<Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
			<EdgeSize val="16"/>
			<TileSize val="16"/>
			<Color r="0.25" g="0.25" b="0.25"/>
			<BackgroundInsets left="5" right="5" top="5" bottom="5"/>
		</Backdrop>
		<Frames>
			<Button name="$parent_SHOWHELM">
				<Size x="16" y="16" />
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="5" y="-5" />
					</Anchor>
				</Anchors>
				<NormalTexture file="Interface\FriendsFrame\UI-Toast-BroadcastIcon" />
				<HighlightTexture file="Interface\FriendsFrame\UI-Toast-BroadcastIcon" alphaMode="ADD"/>
				<Scripts>
					<OnClick>
						if (GNOMTEC_NPCEMOTE_FRAME:IsShown())then 
							GNOMTEC_NPCEMOTE_FRAME:Hide();
						else
							GNOMTEC_NPCEMOTE_FRAME:Show();
						end
					</OnClick>
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnMouseDown>
				self:StartMoving();
			</OnMouseDown>
			<OnMouseUp>self:StopMovingOrSizing();</OnMouseUp>
		</Scripts>
	</Frame>

</Ui>